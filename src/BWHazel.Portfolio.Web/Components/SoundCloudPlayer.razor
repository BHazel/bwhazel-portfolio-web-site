<iframe height="@this.Height"
        width="@this.Width%"
        src="https://w.soundcloud.com/player/?url=https%3A//api.soundcloud.com/playlists/@this.PlaylistId&color=%2331303d&auto_play=false&hide_related=false&show_comments=true&show_user=true&show_reposts=false&show_teaser=true"
        allow="autoplay"
        frameborder="no"
        scrolling="no"
        style="height: @(this.Height)px">
</iframe>
<div style="font-size: 10px; color: #cccccc; line-break: anywhere; word-break: normal; overflow: hidden; white-space: nowrap; text-overflow: ellipsis; font-family: Interstate,Lucida Grande,Lucida Sans Unicode,Lucida Sans,Garuda,Verdana,Tahoma,sans-serif; font-weight: 100;">
    <a href="https://soundcloud.com/@this.UserSlug"
       title="@this.UserDisplayName"
       target="_blank"
       style="color: #cccccc; text-decoration: none;">
        @this.UserDisplayName
    </a> Â· <a href="https://soundcloud.com/@this.UserSlug/sets/@this.PlaylistSlug"
              title="@this.PlaylistTitle"
              target="_blank"
              style="color: #cccccc; text-decoration: none;">
        @this.PlaylistTitle
    </a>
</div>

@code {
    /// <summary>
    /// Gets or sets the height.
    /// </summary>
    public int Height { get; set; } = 450;
    
    /// <summary>
    /// Gets or sets the width as a percentage.
    /// </summary>
    [Parameter]
    public int Width { get; set; } = 100;
    
    /// <summary>
    /// Gets or sets the playlist ID.
    /// </summary>
    [Parameter]
    public int PlaylistId { get; set; }

    /// <summary>
    /// Gets or sets the playlist slug.
    /// </summary>
    [Parameter]
    public string PlaylistSlug { get; set; } = string.Empty;
    
    /// <summary>
    /// Gets or sets the playlist title.
    /// </summary>
    [Parameter]
    public string PlaylistTitle { get; set; } = string.Empty;
    
    /// <summary>
    /// Gets or sets the SoundCLoud user slug.
    /// </summary>
    [Parameter]
    public string UserSlug { get; set; } = "benedict-hazel";
    
    /// <summary>
    /// Gets or sets the SoundCloud user display name.
    /// </summary>
    [Parameter]
    public string UserDisplayName { get; set; } = "Benedict Hazel";
}