<MudPaper Elevation="0">
    <MudNavMenu>
        <MudNavLink Href="/" Icon="@Icons.Material.Filled.Home" Match="NavLinkMatch.All">
            Home
        </MudNavLink>
        <MudNavGroup Title="Music" Icon="@Icons.Material.Filled.MusicNote">
            <MudNavLink Href="/Music" Icon="@Icons.Material.Filled.Info" Match="NavLinkMatch.All">
                Introduction
            </MudNavLink>
            <MudNavLink Href="/Music/Scores" Icon="@Icons.Material.Filled.LibraryMusic" Match="NavLinkMatch.All">
                Scores
            </MudNavLink>
            <MudNavGroup Title="Albums" Icon="@Icons.Material.Filled.MenuBook">
                <MudNavLink Href="/Music/Albums" Icon="@Icons.Material.Filled.ListAlt" Match="NavLinkMatch.All">
                    All Albums
                </MudNavLink>
                <MudNavLink Href="/Music/Albums/Four-Forces" Icon="@Icons.Material.Filled.ElectricBolt" Match="NavLinkMatch.All">
                    Four Forces
                </MudNavLink>
            </MudNavGroup>
        </MudNavGroup>
        <MudNavGroup Title="Graphic Design" Icon="@Icons.Material.Filled.Brush">
            <MudNavLink Href="/Graphic-Design" Icon="@Icons.Material.Filled.Info" Match="NavLinkMatch.All">
                Introduction
            </MudNavLink>
            <MudNavLink Href="/Graphic-Design/Behance-Projects" Icon="@Icons.Material.Filled.PhotoLibrary" Match="NavLinkMatch.All">
                Behance Projects
            </MudNavLink>
        </MudNavGroup>
        <MudDivider mt="2" mb="3" />
        <MudText Typo="Typo.h6" Class="mt-2 ml-3">Other Sites</MudText>
        <MudNavLink Href="https://aka.bwhazel.co.uk" Icon="@Icons.Material.Filled.Forward">
            Aka.BWHazel
        </MudNavLink>
        <MudNavLink Href="https://api.bwhazel.co.uk" Icon="@Icons.Material.Filled.Api">
            BWHazel API
        </MudNavLink>
        <MudNavLink Href="https://bwhantarctica.blogspot.com" Icon="@Icons.Material.Filled.AirplanemodeActive">
            Travel Blog
        </MudNavLink>
        <MudDivider mt="2" mb="3" />
        <MudNavLink Href="/Site-List" Icon="@Icons.Material.Filled.FormatListBulleted">
            Site List
        </MudNavLink>
        <MudNavLink Href="/Privacy-Policy" Icon="@Icons.Material.Filled.Policy">
            Privacy Policy
        </MudNavLink>
        <MudDivider mt="2" mb="3" />
        <MudPaper Class="mt-2 ml-3" Elevation="0">
            <MudText GutterBottom="true" Typo="Typo.h6">About</MudText>
            <MudText GutterBottom="true" Typo="Typo.body1">My personal web site and creative portfolio!</MudText>
            <MudText GutterBottom="true" Typo="Typo.body1"><strong>Contact:</strong> me@bwhazel.co.uk</MudText>
            <MudText GutterBottom="true" Typo="Typo.body1"><strong>Site Version:</strong> @this.SiteVersion</MudText>
            <MudText GutterBottom="true" Typo="Typo.body1"><strong>Technologies</strong></MudText>
            <MudChip T="string">ASP.NET</MudChip>
            <MudChip T="string">MudBlazor</MudChip>
            <MudChip T="string">Netlify</MudChip>
        </MudPaper>
    </MudNavMenu>
</MudPaper>

@code {
    /// <summary>
    /// Gets or sets the site version.
    /// </summary>
    [CascadingParameter(Name = "SiteVersion")]
    public string SiteVersion { get; set; } = string.Empty;
}